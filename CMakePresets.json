{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19
  },

  "vendor": {
    "name": "Roman Voronov"
  },

  "configurePresets": [
    {
      "name": "x64-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "environment": {
        "VSCMD_ARG_TGT_ARCH": "x64",
        "VSCMD_ARG_HOST_ARCH": "x64"
      }
    },

    {
      "name": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },

    {
      "name": "elgato",
      "hidden": true,
      "cacheVariables": {
        "HW_PLATFORM": "ELGATO"
      }
    },
    {
      "name": "mirabox",
      "hidden": true,
      "cacheVariables": {
        "HW_PLATFORM": "MIRABOX"
      }
    },

    {
      "name": "x64-Debug-Elgato",
      "displayName": "x64 Debug (Elgato)",
      "inherits": ["x64-base", "debug", "elgato"]
    },
    {
      "name": "x64-Release-Elgato",
      "displayName": "x64 Release (Elgato)",
      "inherits": ["x64-base", "release", "elgato"]
    },
    {
      "name": "x64-Debug-Mirabox",
      "displayName": "x64 Debug (Mirabox)",
      "inherits": ["x64-base", "debug", "mirabox"]
    },
    {
      "name": "x64-Release-Mirabox",
      "displayName": "x64 Release (Mirabox)",
      "inherits": ["x64-base", "release", "mirabox"]
    }
  ],
  "buildPresets": [
  {
    "name": "x64-Release-Elgato",
    "configurePreset": "x64-Release-Elgato"
  },
  {
    "name": "x64-Debug-Elgato",
    "configurePreset": "x64-Debug-Elgato"
  },
  {
    "name": "x64-Release-Mirabox",
    "configurePreset": "x64-Release-Mirabox"
  },
  {
    "name": "x64-Debug-Mirabox",
    "configurePreset": "x64-Debug-Mirabox"
  }
  ]
}
